
.popUpBg {
	width: 100%;
	height: 100vh;
	background: rgba(0, 0, 0, 0.2);
	position: absolute;
	top: 0px;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: 999;
}
.popUpInside {
	width: 90%;
	margin: 0 auto;
	background: #fff;
	position: absolute;
	left: 50%;
	top: 50%;
	-webkit-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	border-radius: 20rpx;
	overflow: hidden;
}
.popUpTop {
	width: 100%;
	height: 80rpx;
	background: #eff7ff;
	line-height: 80rpx;
	font-size: 32rpx;
	text-align: center;
	color: #1a1a1a;
}
.popUpBtn {
	width: 590rpx;
	height: 88rpx;
	background: #1485ee;
	border-radius: 44rpx;
	color: #fff;
	font-size: 32rpx;
	line-height: 88rpx;
	margin: 20rpx auto;
	text-align: center;
}
.popUpText {
	overflow: hidden;
	padding: 20rpx;
	font-size: 24rpx;
	color: #1a1a1a;
	line-height: 40rpx;
}

