
.ticketView {
	margin-top: 150rpx;
}
.ticketView .uni-collapse {
	background: transparent;
	background: #ffffff;
	border-radius: 10rpx;
	padding: 18rpx;
	margin: 20rpx;
	width: 90%;
}
.myTab {
	display: flex;
	font-size: 14px;
	width: 92%;
	padding: 4px 0;
	margin: 12px auto 0;
	background: #fff;
}
.myTab ._li {
	font-size: 14px;
	color: #a7abbc;
	margin-right: 26px;
	height: 26px;
}
.myTab ._li.active {
	/*border-bottom:4px solid rgb(4, 96, 169);*/
	color: rgb(4, 96, 169);
	font-size: 16px;
	font-weight: bold;
	position: relative;
}
.myTab ._li.active::after {
	content: '';
	position: absolute;
	bottom: 0;
	background: rgb(4, 96, 169);
	width: 100%;
	height: 4px;
	left: 0px;
	border-radius: 8px;
}

