
.orderTab {
	display: flex;
	align-items: center;
	justify-content: space-between;
	height: 88rpx;
	background: #fff;
}
.orderTabItem {
	text-align: center;
	color: #1A1A1A;
	font-size: 36rpx;
	border-bottom:5rpx solid #fff;
	flex: 1;
	line-height: 88rpx;
}
.orderTabItem.active {
	border-bottom: 5rpx solid #1485EE;
	color: #1485EE;
}
.orderItem {
	background: #fff;
	padding: 20rpx;
	border-radius: 10rpx;
	margin:20rpx;
}
.orderShipName {
	border-bottom: 1rpx solid #a7a7a7;
	font-size: 30rpx;
	height:60rpx;
	line-height:60rpx;
	margin-bottom: 20rpx;
}
.orderInfo {
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.shipLine {
	font-size: 30rpx;
	margin-bottom: 20rpx;
}
.shipTime {
	color: #a7a7a7;
	font-size: 24rpx;
}
.shipPrice {
	text-align: right;
	font-size: 36rpx;
	margin-bottom: 20rpx;
	color: #FF5A00;
}
.shipState {
	background: #f6f6f6;
	border-radius: 20px;
	font-size: 24rpx;
	padding: 2rpx 24rpx;
}
.shipState[data-state='1'] {
	color: #FF5A00;
}
.shipState[data-state='2'] {
	color: #1485EE;
}
.orderBtnList {
	margin-top: 20rpx;
	display: flex;
	align-items: center;
	justify-content: flex-end;
}
.orderBtn {
	font-size: 24rpx;
	background: #eff7ff;
	border-radius: 5rpx;
	text-align: center;
	color: #1485EE;
	padding: 12rpx 24rpx;
	margin-left: 20rpx;
}

